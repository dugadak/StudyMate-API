[run]
source = .
omit =
    */venv/*
    */env/*
    */migrations/*
    */tests/*
    */test_*
    manage.py
    */settings/*
    */wsgi.py
    */asgi.py
    */__pycache__/*
    .venv/*
    venv/*
    env/*
    build/*
    dist/*
    *.egg-info/*
    .pytest_cache/*
    .mypy_cache/*
    node_modules/*

branch = true
parallel = true

[report]
precision = 2
show_missing = true
skip_covered = false
exclude_lines =
    pragma: no cover
    def __repr__
    def __str__
    raise AssertionError
    raise NotImplementedError
    if __name__ == .__main__.:
    if TYPE_CHECKING:
    class .*\bProtocol\):
    @(abc\.)?abstractmethod

[html]
directory = test_results/coverage_html
title = StudyMate API 테스트 커버리지 리포트

[xml]
output = test_results/coverage.xml