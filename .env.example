# StudyMate API Environment Variables Template
# Copy this file to .env and fill in your values

# Django Settings
DEBUG=False
SECRET_KEY=your-secret-key-here
ALLOWED_HOSTS=localhost,127.0.0.1,your-domain.com

# Database Configuration (AWS RDS Free Tier - PostgreSQL)
# Use t3.micro RDS instance for free tier
DATABASE_URL=postgresql://username:password@your-rds-endpoint.amazonaws.com:5432/studymate

# Redis Configuration (ElastiCache Free Tier or Local)
# For free tier, use local Redis on EC2
REDIS_URL=redis://localhost:6379/0

# AWS Settings (Free Tier Optimized)
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_STORAGE_BUCKET_NAME=studymate-static-files
AWS_S3_REGION_NAME=ap-northeast-2
# Use S3 for static files to save EC2 storage (Free Tier: 5GB)
USE_S3_FOR_STATIC=True

# OpenAI API
OPENAI_API_KEY=your-openai-api-key

# Anthropic API
ANTHROPIC_API_KEY=your-anthropic-api-key

# Together AI
TOGETHER_API_KEY=your-together-api-key

# Email Configuration (AWS SES Free Tier - 62,000 emails/month)
EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend
EMAIL_HOST=email-smtp.ap-northeast-2.amazonaws.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=your-ses-smtp-username
EMAIL_HOST_PASSWORD=your-ses-smtp-password
DEFAULT_FROM_EMAIL=noreply@studymate.com

# Stripe Payment
STRIPE_PUBLIC_KEY=your-stripe-public-key
STRIPE_SECRET_KEY=your-stripe-secret-key
STRIPE_WEBHOOK_SECRET=your-stripe-webhook-secret

# Sentry Error Tracking (Free Tier - 5,000 events/month)
SENTRY_DSN=your-sentry-dsn

# Celery Configuration
CELERY_BROKER_URL=redis://localhost:6379/1
CELERY_RESULT_BACKEND=redis://localhost:6379/2

# Security
SECURE_SSL_REDIRECT=False  # Set to True when using HTTPS
SESSION_COOKIE_SECURE=False  # Set to True when using HTTPS
CSRF_COOKIE_SECURE=False  # Set to True when using HTTPS
SECURE_HSTS_SECONDS=0  # Set to 31536000 when using HTTPS

# CORS
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8080

# Application Settings
SITE_NAME=StudyMate
SITE_URL=http://your-domain.com
API_URL=http://your-domain.com/api

# Free Tier Optimization Settings
MAX_UPLOAD_SIZE=10485760  # 10MB limit
CACHE_TTL=3600  # 1 hour cache
RATE_LIMIT_REQUESTS=100  # Per minute
DB_CONN_MAX_AGE=600  # Connection pooling

# Monitoring (CloudWatch Free Tier)
USE_CLOUDWATCH=True
CLOUDWATCH_LOG_GROUP=/aws/ec2/studymate

# Development/Production
ENVIRONMENT=production