# Environment
ENVIRONMENT=development
DEBUG=true

# Database
DATABASE_URL=postgresql://postgres:password@localhost:5432/timetree_scheduler
DATABASE_URL_TEST=postgresql://postgres:password@localhost:5432/timetree_scheduler_test

# TimeTree API
TIMETREE_CLIENT_ID=your_timetree_client_id
TIMETREE_CLIENT_SECRET=your_timetree_client_secret
TIMETREE_REDIRECT_URI=http://localhost:8000/auth/timetree/callback

# OpenAI API
OPENAI_API_KEY=your_openai_api_key
OPENAI_MODEL=gpt-4o

# Security
SECRET_KEY=your-super-secret-key-change-this-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# Encryption
ENCRYPTION_KEY=your-32-byte-encryption-key-for-tokens

# Redis (Optional - for caching and rate limiting)
REDIS_URL=redis://localhost:6379/0

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json

# Observability (Optional)
SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id
OTEL_EXPORTER_OTLP_ENDPOINT=http://localhost:4317

# Rate Limiting
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_PER_HOUR=1000

# AI Settings
MAX_RETRY_ATTEMPTS=3
AI_TIMEOUT_SECONDS=30

# TimeTree Settings
TIMETREE_API_BASE_URL=https://timetreeapis.com
TIMETREE_TIMEOUT_SECONDS=10
TIMETREE_MAX_RETRIES=3

# Frontend
NEXT_PUBLIC_API_URL=http://localhost:8000
NEXT_PUBLIC_ENVIRONMENT=development

# CORS
ALLOWED_ORIGINS=http://localhost:3000,https://your-domain.com
ALLOWED_METHODS=GET,POST,PUT,DELETE,OPTIONS
ALLOWED_HEADERS=*

# File Upload (Optional)
MAX_FILE_SIZE_MB=10
ALLOWED_FILE_TYPES=image/jpeg,image/png,application/pdf